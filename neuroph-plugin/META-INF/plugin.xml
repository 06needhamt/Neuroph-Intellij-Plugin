<idea-plugin version="2">
    <id>com.thomas.needham.neurophidea</id>
    <name>Neuroph For Intellij</name>
    <version>1.0</version>
    <vendor email="06needhamt@gmail.com" url="">Tom Needham</vendor>

    <description><![CDATA[
      Allows for easy integration of the Neuroph libraries
      into intellij products and easy to use example neural networks
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="com.thomas.needham.neurophidea.settings.VersionSetting">

        </applicationConfigurable>
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="NeurophGroup" text="Neuroph" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>

            <action class="com.thomas.needham.neurophidea.actions.CreateNetworkAction"
                    text="Create New Network" id="CreateNetwork" description="Creates a new Neural Network">
                <keyboard-shortcut first-keystroke="ctrl alt N" keymap="$default"/>
            </action>

            <action id="OpenExistingNetwork" class="com.thomas.needham.neurophidea.actions.OpenExistingNetworkAction"
                    text="Open Existing Network" description="Opens an existing network created by this plugin">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt O"/>
            </action>
        </group>
        <action class="com.thomas.needham.neurophidea.actions.InitAction" id="Init">
            <add-to-group group-id="NewProjectOrModuleGroup" anchor="last"/>
        </action>
        <!-- Add your actions here -->

    </actions>
<application-components>
    <component>
        <implementation-class>com.thomas.needham.neurophidea.actions.PluginRegistration</implementation-class>
    </component>
</application-components>
</idea-plugin>